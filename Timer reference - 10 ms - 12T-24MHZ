void Timer0_Isr(void) interrupt 1
{
	TL0 = 0xE0;				//设置定时初始值
	TH0 = 0xB1;				//设置定时初始值
}

void Timer0_Init(void)		//10毫秒@24.000MHz
{
	AUXR &= 0x7F;			//定时器时钟12T模式
	TMOD &= 0xF0;			//设置定时器模式
	TMOD |= 0x01;			//设置定时器模式
	TL0 = 0xE0;				//设置定时初始值
	TH0 = 0xB1;				//设置定时初始值
	TF0 = 0;				//清除TF0标志
	TR0 = 1;				//定时器0开始计时
	ET0 = 1;				//使能定时器0中断
        EA = 1;  //开启全局中断
}
